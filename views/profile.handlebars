<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Post a dog for adoption:</h3>

    <form class='form new-dog-form'>
      <div class='form-group'>
        <label for='dog-name'>Dog name:</label>
        <input class='form-input' type='text' id='dog-name' name='dog-name' />
      </div>
      <div class='form-group'>
        <label for='dog-funding'>Adoption Fee ($):</label>
        <input
          class='form-input'
          type='number'
          id='dog-funding'
          name='dog-funding'
        />
      </div>
      <div class='form-group'>
        <label for='dog-breed'>Breed:</label>
        <textarea class='form-input' id='dog-breed' name='dog-breed'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  {{#if dogs.length}}
    <div class='col-md-6 dog-list'>
      <h3>Current Projects:</h3>

      {{#each dogs as |dog|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/dog/{{dog.id}}'>{{dog.name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{dog.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>