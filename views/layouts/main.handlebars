<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Dog Adoption</title>
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x'
      crossorigin='anonymous'
    />

    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=KoHo:wght@300&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class='flex-column justify-space-around'>
      <header id='header' class='display-flex justify-space-between align-center p-2'>
        <h1>
          <a href='/'>Dogs Available for Adoption</a>
        </h1>
        
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href='/profile'>profile</a>
            |
            <button class='no-button' id='logout'>logout</button>
          {{else}}
            <a href='/login'>login</a>
          {{/if}}
        </nav>
      </header>
      <img src="https://res.cloudinary.com/dr7w1oryg/image/upload/v1621990727/Dogs/dog-background_jwt4xa.png">

      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="https://kit.fontawesome.com/85e3f8554d.js" crossorigin="anonymous"></script>
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>